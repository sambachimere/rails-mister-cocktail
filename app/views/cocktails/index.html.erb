<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://images.unsplash.com/photo-1536935338788-846bb9981813?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2572&q=80);">
  <div class="container">
    <h1><strong>Share great cocktails with the world !</strong></h1>
    <p></p>
    <a class="btn btn-success" href="/cocktails/new">Create a new cocktail</a>
  </div>
</div>

<div class="container text-center mt-4">
  <div class="row">
   <% @cocktails.each do |cocktail| %>
   <div class="col-md-4">
     <div class="w-100 card text-center mb-3 mr-4 card-cocktail" style="width: 18rem;">
       <%= cl_image_tag cocktail.photo, height: 300, crop: :fill %>
      <div class="card-body">
        <p><%= cocktail.name %></p>
        <%= link_to "View cocktail", cocktail_path(cocktail.id), class: "btn-ghost" %>
      </div>
    </div>
  </div>
  <% end %>
</div>
<hr>
<p><%= link_to "Create a new cocktail", new_cocktail_path, class: "btn btn-success" %></p>
</div>
